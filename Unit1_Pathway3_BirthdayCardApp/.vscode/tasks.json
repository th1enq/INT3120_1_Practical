{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Android App",
            "type": "shell",
            "command": "./gradlew",
            "args": ["build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Install Android App",
            "type": "shell",
            "command": "./gradlew",
            "args": ["installDebug"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "dependsOn": "Build Android App"
        },
        {
            "label": "Launch App",
            "type": "shell",
            "command": "adb",
            "args": ["shell", "am", "start", "-n", "com.example.birthdaycardapp/.MainActivity"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Deploy and Run App",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Install Android App",
                "Launch App"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}